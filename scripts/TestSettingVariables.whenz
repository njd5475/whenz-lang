
when event app_starts once
	print Starting App!
	@opCount = 0
	//@decimal = 0.49432
	@string = Hello World!
	@integer = 2489

//when @decimal == 0.49432
//	print Decimal set
//  increment @opCount
	
when @string == Hello World! once
  print String set to @string, and Op count at @opCount
  increment @opCount

when @integer == 2489 once
  print Integer set to @integer, and Op count at @opCount
  increment @opCount

when @opCount >= 2 once
	print All done, at opCount @opCount
	exit
