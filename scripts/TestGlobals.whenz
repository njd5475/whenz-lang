when event app_starts once
  print Hello, man.
  printvar @platform
  printvar @env.os.arch
  printvar @env.os.version
  printvar @env.os.name
  printvar @env.user.home
  printvar @env.user.name
  printvar @env.file.separator

when @platform == Java
  print We're on Java dude.
  printvar @env.java.home
  printvar @env.java.class.path
  printvar @env.java.vendor
  printvar @env.java.version
  @iter = 1

when @iter == 1
  exit
